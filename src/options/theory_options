#
# Option specification file for CVC4
# See src/options/base_options for a description of this file format
#

module THEORY "options/theory_options.h" Theory layer

expert-option theoryOfMode theoryof-mode --theoryof-mode=MODE CVC4::theory::TheoryOfMode :handler stringToTheoryOfMode :default CVC4::theory::THEORY_OF_TYPE_BASED :include "options/theoryof_mode.h" :read-write
 mode for Theory::theoryof()

option useTheoryList use-theory --use-theory=NAME std::string :handler handleUseTheoryList :notify notifyUseTheoryList
 use alternate theory implementation NAME (--use-theory=help for a list). This option may be repeated or a comma separated list.

option modelBasedTc --model-based-tc bool :default false
 use model-based theory combination 
 
option modelBasedTcMode --model-based-tc-mode=N int :default 0
 experimental option for model-based theory combination
 
option modelBasedTcRlv --model-based-tc-rlv bool :default true
 use relevant equivalence classes 
 
option modelBasedTcAck --model-based-tc-ack bool :default false
 use Ackermanization lemmas instead of care splits

option modelBasedTcRewUnique --model-based-tc-runique bool :default false
 consider splits that are unique up to rewriting
 
option modelBasedTcTermUnique --model-based-tc-tunique bool :default false
 consider splits on unique terms
 
endmodule
